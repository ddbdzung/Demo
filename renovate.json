{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeMinor",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "timezone": "Asia/Ho_Chi_Minh",
  "schedule": ["after 10pm every weekday", "before 5am every weekday", "every weekend"],
  "semanticCommits": "enabled",
  "commitMessageTopic": "{{depName}}",
  "commitMessageAction": "update",
  "commitMessageExtra": "to {{newVersion}}",
  "commitMessagePrefix": "chore(deps): ",
  "prTitle": "chore(deps): update {{depName}} to {{newVersion}}",
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}",
  "packageRules": [
    {
      "description": "NestJS packages",
      "groupName": "NestJS",
      "matchPackagePatterns": ["^@nestjs/"],
      "commitMessageTopic": "NestJS packages"
    },
    {
      "description": "TypeScript and related packages",
      "groupName": "TypeScript",
      "matchPackagePatterns": ["typescript", "ts-", "@types/"],
      "commitMessageTopic": "TypeScript packages"
    },
    {
      "description": "ESLint and related packages",
      "groupName": "ESLint",
      "matchPackagePatterns": ["eslint", "@eslint/"],
      "commitMessageTopic": "ESLint packages"
    },
    {
      "description": "Jest and testing packages",
      "groupName": "Jest",
      "matchPackagePatterns": ["jest", "@types/jest", "ts-jest", "supertest", "@types/supertest"],
      "commitMessageTopic": "testing packages"
    },
    {
      "description": "Development dependencies - automerge patch and minor",
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "description": "Production dependencies - automerge patch only",
      "matchDepTypes": ["dependencies"],
      "automerge": true,
      "matchUpdateTypes": ["patch"]
    },
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "commitMessagePrefix": "chore(deps): ",
      "labels": ["dependencies", "major-update"]
    },
    {
      "description": "Security updates",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchPackagePatterns": ["*"],
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "automerge": true,
      "labels": ["security", "dependencies"]
    },
    {
      "description": "SWC packages",
      "groupName": "SWC",
      "matchPackagePatterns": ["^@swc/"],
      "commitMessageTopic": "SWC packages"
    },
    {
      "description": "Prettier and formatting packages",
      "groupName": "Prettier",
      "matchPackagePatterns": ["prettier", "eslint-config-prettier", "eslint-plugin-prettier"],
      "commitMessageTopic": "formatting packages"
    },
    {
      "description": "Husky and Git hooks",
      "groupName": "Git hooks",
      "matchPackagePatterns": ["husky", "lint-staged", "commitizen", "commitlint", "cz-"],
      "commitMessageTopic": "git hooks packages"
    },
    {
      "description": "Package manager updates",
      "matchManagers": ["npm"],
      "matchPackageNames": ["pnpm"],
      "commitMessageTopic": "package manager",
      "automerge": false,
      "labels": ["package-manager"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"],
    "commitMessageAction": "update pnpm lock file",
    "commitMessageTopic": null,
    "commitMessageExtra": null,
    "branchTopic": "lock-file-maintenance"
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Dependency Dashboard",
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies. Read the [Dependency Dashboard](https://docs.renovatebot.com/key-concepts/dashboard/) docs to learn more.",
  "assignees": [],
  "reviewers": [],
  "labels": ["dependencies"],
  "rebaseWhen": "conflicted",
  "ignoreDeps": [],
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/tsconfig*.tsbuildinfo"
  ],
  "packageManager": "pnpm",
  "enabledManagers": ["npm"],
  "npmrc": ".npmrc",
  "rangeStrategy": "bump",
  "respectLatest": true,
  "node": {
    "supportPolicy": ["current"]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "stabilityDays": 3,
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "platformAutomerge": false,
  "constraints": {
    "pnpm": ">=10.0.0"
  },
  "postUpdateOptions": ["pnpmDedupe"]
} 

